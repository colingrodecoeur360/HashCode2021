{
    "compilerOptions": {
        "allowJs": false,
        "target": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "incremental": true,
        "outDir": "dist/",
        "baseUrl": "src/",
        "esModuleInterop": true,
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "lib": ["es2017"]
    },
    "include": ["src"]
}
